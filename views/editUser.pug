extends base
include _reviewcard

block content
    main.main
        .user-view
            include _navAccount
            .user-view__content
                .user-view__form-container
                    h2.heading-secondary.ma-bt-md=`EDIT ${userProfil.name} Profil`
                    
                    .card
                        .card__header
                            .card__picture
                                .card__picture-overlay &nbsp;
                                a.review__card--btn-back(href=`/manage-users`)
                                    svg.review__card__icon
                                        use(xlink:href='/img/icons.svg#icon-arrow-left')
                                    p.review__card--btn-back-text Go back 
                                img.card__picture-img(src=`/img/users/${userProfil.photo}`, alt=`${userProfil.name}`)
                            h3.heading-tertirary
                                span= userProfil.name

                        .review__content
                            .review__avatar
                                img.review__avatar-img.user__avatar-img(src=`/img/users/${userProfil.photo}`, alt=`${userProfil.name}`)
                                input.form__upload(type='file', accept='image/*', id='photo', name='photo')
                                label.edit-user-photo(for='photo') Choose new photo
                            .form__group.full
                                label.form__label(for='name') Name
                                input#name.form__input(type='text', placeholder='full name', required)
                            .form__group.full
                                label.form__label(for='email') Email address
                                input#email.form__input(type='email', placeholder='you@example.com', required)

                            .form__group.full.ma-bt-lg
                                label.form__label(for='role') User Role
                                select#user-role.form__input.user-role(name='role',required)
                                    option(value="") --Please choose an option--
                                    option(value="user") User
                                    option(value="guide") Guide
                                    option(value="lead-guide") Lead-Guide
                                    option(value="Admin") Lead-Guide

                            //- .form__group.full.ma-bt-lg
                            //-     label.form__label(for='role') User Status
                            //-     select#user-status.form__input.user-status(name='role',required)
                            //-         option(value="") --Please choose an option--
                            //-         option(value=true) Active
                            //-         option(value=false) Not Active

                            
                            //- .form__input.form--add
                            //-     .user-label
                        

                        .review__card__footer
                            a.btn.btn--green.btn--small.edit-user(type='button',data-id=`${userProfil.id}`) Edit Profil